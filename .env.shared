# ChatSDK Configuration - Using Shared Impact Idol Services
# This configuration connects to Impact Idol's existing PostgreSQL and MinIO

NODE_ENV=production
PORT=5501
LOG_LEVEL=info

# Database - Enterprise PostgreSQL (Port 5434)
DB_HOST=localhost
DB_PORT=5434
DB_NAME=chatsdk
DB_USER=chatsdk
DB_PASSWORD=chatsdk_dev
DB_SSL=false

# MinIO S3 - Impact Idol's MinIO (Port 9002)
# Note: Need Impact Idol's credentials
S3_ENDPOINT=http://localhost:9002
S3_REGION=us-east-1
S3_ACCESS_KEY=IMPACT_IDOL_MINIO_ACCESS_KEY
S3_SECRET_KEY=IMPACT_IDOL_MINIO_SECRET_KEY
S3_BUCKET=chatsdk
S3_PUBLIC_URL=http://localhost:9002/chatsdk
S3_USE_SSL=false

# Centrifugo - Our own service (different from Impact Idol's port 8000)
CENTRIFUGO_URL=ws://localhost:8001/connection/websocket
CENTRIFUGO_API_URL=http://localhost:8001/api
CENTRIFUGO_API_KEY=chatsdk-api-key-change-in-production
CENTRIFUGO_TOKEN_SECRET=chatsdk-dev-secret-key-change-in-production
CENTRIFUGO_JWT_SECRET=chatsdk-dev-secret-key-change-in-production

# Redis - Our own service
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=chatsdk_redis_test_123
REDIS_TLS=false

# Inngest
INNGEST_EVENT_KEY=test_inngest_event_key_123
INNGEST_SIGNING_KEY=test_inngest_signing_key_123

# JWT
JWT_SECRET=test_jwt_secret_key_for_testing_123

# Metrics
METRICS_ENABLED=true

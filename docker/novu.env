# Novu Environment Variables
# Copy this file to novu.env.local and fill in your values

# JWT Secret - MUST CHANGE IN PRODUCTION (min 32 characters)
JWT_SECRET=your-novu-jwt-secret-min-32-characters-here

# Encryption key for sensitive data (must be exactly 32 characters)
STORE_ENCRYPTION_KEY=your-32-character-encryption-key

# Storage configuration (using MinIO)
S3_LOCAL_STACK=http://minio:9000
S3_BUCKET_NAME=novu
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-minio-access-key
AWS_SECRET_ACCESS_KEY=your-minio-secret-key

# Disable new relic and other optional integrations
NEW_RELIC_ENABLED=false
SEGMENT_TOKEN=

# Disable telemetry for local development
DISABLE_USER_REGISTRATION=false

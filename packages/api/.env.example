# ChatSDK API Environment Configuration
# Copy this file to .env and fill in your values

# Server
PORT=5500

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5433
DB_USER=chatsdk
DB_PASSWORD=chatsdk_dev
DB_NAME=chatsdk

# Centrifugo (WebSocket)
CENTRIFUGO_API_URL=http://localhost:8000/api
CENTRIFUGO_API_KEY=chatsdk-api-key-change-in-production
CENTRIFUGO_TOKEN_SECRET=chatsdk-dev-secret-key-change-in-production

# Novu (Push Notifications)
# Get from Novu dashboard: http://localhost:4200 → Settings → API Keys
NOVU_SECRET_KEY=
NOVU_API_URL=http://localhost:3000

# Inngest (Background Jobs)
INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=

{
  "name": "@chatsdk/api",
  "version": "2.0.8",
  "description": "ChatSDK API Server",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm --dts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run tests/e2e.test.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.2",
    "@novu/api": "^3.11.2",
    "centrifuge": "^5.2.2",
    "dotenv": "^17.2.3",
    "hono": "^4.6.14",
    "inngest": "^3.48.1",
    "jose": "^5.9.6",
    "meilisearch": "^0.45.0",
    "pg": "^8.13.1",
    "uuid": "^11.0.3",
    "web-push": "^3.6.0",
    "zod": "^3.24.1",
    "sharp": "^0.33.0",
    "blurhash": "^2.0.5",
    "prom-client": "^15.1.0",
    "pino": "^9.0.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.0"
  }
}
